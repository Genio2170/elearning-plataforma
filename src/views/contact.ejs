<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;700&display=swap" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Sora:wght@100..800&display=swap" rel="stylesheet">
 <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.4.1/dist/tailwind.min.css" rel="stylesheet">
    <title>Contacte-nos </title>
    <link rel="stylesheet" href="/public/css/main.css">
     <script defer src="/public/js/main.js"></script>
    <script defer src="/public/js/auth-check.js"></script>
    <script defer src="/public/js/maintenance.js"></script>
    <script defer src="/public/js/admin.js"></script>
    <script defer src="/public/js/notifications.js"></script>
    <script defer src="/public/js/notificationSocket.js"></script>
    <script defer src="/public/js/otp-verification.js"></script>
    <script defer src="/public/js/teacher-chat.js"></script>
    <script defer src="/public/js/teacher.js"></script>
  </head>
<body>
    <%- include('partials/header', { pageTitle }) %>

<div class="container mx-auto px-4 py-12">
  <h1 class="text-3xl font-bold text-center mb-8">Contacte-nos</h1>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Seção de Informações -->
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-xl font-semibold mb-4">Informações de Contacto da EducaHome</h2>
      
      <div class="space-y-4">
        <!-- Redes Sociais -->
        <div>
          <h3 class="font-medium mb-2">Redes Sociais</h3>
          <div class="flex space-x-4">
            <% socialLinks.forEach(link => { %>
              <a 
                href="<%= https://https://www.facebook.com/share/1HEjzDP9HA/?mibextid=LQQJ4d %>" 
                target="_blank"
                class="text-blue-600 hover:text-blue-800 transition"
                aria-label="<%= link.name %>"
              >
                <i class="fab fa-<%=fab fa-facebook%> text-2xl"></i>
              </a>
            <% }) %>
          </div>

           <div class="flex space-x-4">
            <% socialLinks.forEach(link => { %>
              <a 
                href="<%= https://https://www.instagram.com/educahome01?igsh=b3Vrb2R0YzJzMzY2&utm_source=qr %>" 
                target="_blank"
                class="text-blue-600 hover:text-blue-800 transition"
                aria-label="<%= link.name %>"
              >
                <i class="fab fa-<%=ffab fa-instagram%> text-2xl"></i>
              </a>
            <% }) %>
          </div>
        </div>

        <!-- Contactos Alternativos -->
        <div class="space-y-2">
          <h3 class="font-medium">Outros Contactos</h3>
          <p><i class="fas fa-envelope mr-2"></i> <%= educahome01@gmail.com%></p>
          <p><i class="fas fa-phone mr-2"></i> <%= contactInfo.phone %></p>
          <p><i class="fas fa-map-marker-alt mr-2"></i> <%= contactInfo.address %></p>
        </div>

        <!-- Mapa -->
        <div class="mt-6">
          <h3 class="font-medium mb-2">Localização</h3>
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3940.923646908243!2d13.231415415338915!3d-8.811667893588785!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1a51f3c8f8a9e9e9%3A0x1a51f3c8f8a9e9e9!2sLuanda%2C%20Angola!5e0!3m2!1sen!2sus!4v1620000000000!5m2!1sen!2sus" 
            width="100%" 
            height="300" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy"
            class="rounded-lg shadow"
          ></iframe>
        </div>
      </div>
    </div>

    <!-- Formulário -->
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-xl font-semibold mb-4">Envie-nos uma mensagem</h2>
      <form action="/contact" method="POST">
        <div class="space-y-4">
          <div>
            <label for="name" class="block mb-1">Nome</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required
              class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
          </div>

          <div>
            <label for="email" class="block mb-1">E-mail</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required
              class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
          </div>

          <div>
            <label for="subject" class="block mb-1">Assunto</label>
            <select 
              id="subject" 
              name="subject" 
              class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
              <option value="Suporte">Suporte Técnico</option>
              <option value="Parceria">Parceria Comercial</option>
              <option value="Outro">Outro</option>
            </select>
          </div>

          <div>
            <label for="message" class="block mb-1">Mensagem</label>
            <textarea 
              id="message" 
              name="message" 
              rows="5"
              required
              class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            ></textarea>
          </div>

          <button 
            type="submit"
            class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition w-full"
          >
            Enviar Mensagem
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>

</body>
</html>