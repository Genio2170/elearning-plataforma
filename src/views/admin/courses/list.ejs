<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;700&display=swap" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Sora:wght@100..800&display=swap" rel="stylesheet">
 <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.4.1/dist/tailwind.min.css" rel="stylesheet">
    <title>Lista de cursos</title>
    <script defer src="/public/js/admin.js"></script>
</head>
<body>
  <!-- Em list.ejs -->
<table id="coursesTable" class="w-full">
<thead>
<tr>
<th>Título</th>
<th>Professor</th>
<th>Status</th>
<th>Ações</th>
</tr>
</thead>
<tbody>
<% courses.forEach(course => { %>
<tr>
<td><%= course.title %></td>
<td><%= course.teacher.name %></td>
<td>
<span class="px-2 py-1 rounded-full text-xs 
<%= course.status === 'published' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
<%= course.status %>
</span>
</td>
<td>
<a href="/admin/courses/<%= course._id %>/edit" class="text-blue-600 mr-2">Editar</a>
<% if(course.status === 'pending') { %>
<a href="/admin/content/<%= course._id %>/approve" class="text-green-600">Aprovar</a>
<% } %>
</td>
</tr>
<% }) %>
</tbody>
</table>

<table>
<thead>
<tr>
<th>Course Title</th>
<th>Teacher</th>
<th>Lessons</th>
<th>Actions</th>
</tr>
</thead>
<tbody>
<% courses.forEach(course => { %>
<tr>
<td><%= course.title %></td>
<td><%= course.teacher.name %></td>
<td><%= course.lessons.length %></td>
<td>
<button onclick="deleteCourse('<%= course._id %>')">Delete</button>
</td>
</tr>
<% }) %>
</tbody>
</table>


<script>
  $(document).ready(() => $('#coursesTable').DataTable());
</script>
  
</body>
</html>