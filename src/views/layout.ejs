<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;700&display=swap" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Sora:wght@100..800&display=swap" rel="stylesheet">
 <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.4.1/dist/tailwind.min.css" rel="stylesheet">
  <title><%= title %></title>
  <link href="/css/main.css" rel="stylesheet">
  <link 
  rel="stylesheet" 
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
>
 <script defer src="/public/js/main.js"></script>
    <script defer src="/public/js/auth-check.js"></script>
    <script defer src="/public/js/maintenance.js"></script>
    <script defer src="/public/js/admin.js"></script>
    <script defer src="/public/js/notifications.js"></script>
    <script defer src="/public/js/notificationSocket.js"></script>
    <script defer src="/public/js/otp-verification.js"></script>
    <script defer src="/public/js/teacher-chat.js"></script>
    <script defer src="/public/js/teacher.js"></script>
</head>
<body class="bg-gray-50">
  <!-- Header -->
  <header class="bg-blue-600 text-white shadow-md">
    <div class="container mx-auto px-4 py-3 flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <img src="/images/logo.png" alt="Logo" class="h-10">
      </a>
      
      <!-- Menu Desktop -->
      <nav class="hidden md:flex items-center space-x-6">
        <a href="/" class="hover:text-blue-200">Início</a>
        <a href="/about" class="hover:text-blue-200">Sobre</a>
        <a href="/courses" class="hover:text-blue-200">Cursos</a>
        <a href="/teachers" class="hover:text-blue-200">Professores</a>
        
        <% if (!user) { %>
          <div class="relative group">
            <button class="hover:text-blue-200 flex items-center">
              Conta <i class="ml-1 fas fa-chevron-down text-xs"></i>
            </button>
            <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50 hidden group-hover:block">
              <a href="/auth/login" class="block px-4 py-2 text-gray-800 hover:bg-blue-50">Login</a>
              <a href="/auth/register" class="block px-4 py-2 text-gray-800 hover:bg-blue-50">Cadastrar</a>
            </div>
          </div>
        <% } else { %>
          <div class="relative group">
            <button class="hover:text-blue-200 flex items-center">
              <img src="<%= user.photo || '/images/default-avatar.jpg' %>" class="w-8 h-8 rounded-full mr-2">
              <span><%= user.fullName.split(' ')[0] %></span>
              <i class="ml-1 fas fa-chevron-down text-xs"></i>
            </button>
            <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50 hidden group-hover:block">
              <a href="/users/profile" class="block px-4 py-2 text-gray-800 hover:bg-blue-50">Perfil</a>
              <a href="/users/dashboard" class="block px-4 py-2 text-gray-800 hover:bg-blue-50">Painel</a>
              <a href="/auth/logout" class="block px-4 py-2 text-gray-800 hover:bg-blue-50">Sair</a>
            </div>
          </div>
        <% } %>
      </nav>
      
      <!-- Menu Mobile Button -->
      <button class="md:hidden text-white focus:outline-none" id="mobile-menu-button">
        <i class="fas fa-bars text-xl"></i>
      </button>
    </div>
    
    <!-- Menu Mobile -->
    <div class="md:hidden hidden bg-blue-700 px-4 py-2" id="mobile-menu">
      <a href="/" class="block py-2 text-white hover:bg-blue-600 rounded px-2">Início</a>
      <a href="/about" class="block py-2 text-white hover:bg-blue-600 rounded px-2">Sobre</a>
      <a href="/courses" class="block py-2 text-white hover:bg-blue-600 rounded px-2">Cursos</a>
      <a href="/teachers" class="block py-2 text-white hover:bg-blue-600 rounded px-2">Professores</a>
      <% if (!user) { %>
        <a href="/auth/login" class="block py-2 text-white hover:bg-blue-600 rounded px-2">Login</a>
        <a href="/auth/register" class="block py-2 text-white hover:bg-blue-600 rounded px-2">Cadastrar</a>
      <% } else { %>
        <a href="/users/profile" class="block py-2 text-white hover:bg-blue-600 rounded px-2">Perfil</a>
        <a href="/users/dashboard" class="block py-2 text-white hover:bg-blue-600 rounded px-2">Painel</a>
        <a href="/auth/logout" class="block py-2 text-white hover:bg-blue-600 rounded px-2">Sair</a>
      <% } %>
    </div>
  </header>

  <!-- Conteúdo Principal -->
  <main class="container mx-auto px-4 py-6">

    <%- body %>
// Uso no EJS
<title><%= seo.title %> | <%= title %></title>
<meta name="description" content="<%= seo.description %>">
<meta property="og:title" content="<%= seo.og.title %>">
  </main>

  <!-- Footer -->
  <footer class="bg-blue-800 text-white py-8">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div>
          <h3 class="text-xl font-bold mb-4">Sobre Nós</h3>
          <p class="text-blue-200">Plataforma de educação online com cursos de qualidade.</p>
        </div>
        <div>
          <h3 class="text-xl font-bold mb-4">Links Rápidos</h3>
          <ul class="space-y-2">
            <li><a href="/" class="text-blue-200 hover:text-white">Início</a></li>
            <li><a href="/courses" class="text-blue-200 hover:text-white">Cursos</a></li>
            <li><a href="/teachers" class="text-blue-200 hover:text-white">Professores</a></li>
          </ul>
        </div>
        <div>
          <h3 class="text-xl font-bold mb-4">Legal</h3>
          <ul class="space-y-2">
            <li><a href="#" class="text-blue-200 hover:text-white" onclick="showModal('terms')">Termos de Uso</a></li>
            <li><a href="#" class="text-blue-200 hover:text-white" onclick="showModal('privacy')">Política de Privacidade</a></li>
          </ul>
        </div>
        <div>
          <h3 class="text-xl font-bold mb-4">Contato</h3>
          <div class="flex space-x-4">
            <a href="#" class="text-blue-200 hover:text-white text-xl"><i class="fab fa-facebook"></i></a>
            <a href="#" class="text-blue-200 hover:text-white text-xl"><i class="fab fa-twitter"></i></a>
            <a href="#" class="text-blue-200 hover:text-white text-xl"><i class="fab fa-instagram"></i></a>
          </div>
        </div>
      </div>
      <div class="border-t border-blue-700 mt-8 pt-6 text-center text-blue-200">
        <p>&copy; 2023 Plataforma de Aulas Online. Todos os direitos reservados.</p>
      </div>
    </div>
  </footer>

  <!-- Modals -->
  <div id="terms-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden  items-center justify-center p-4">
    <div class="bg-white rounded-lg max-w-2xl w-full max-h-screen overflow-y-auto">
      <div class="p-6">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-xl font-bold">Termos de Uso</h3>
          <button onclick="hideModal('terms')" class="text-gray-500 hover:text-gray-700">
            <i class="fas fa-times"></i>
          </button>
        </div>
        <div class="prose">
          <!-- Conteúdo dos termos -->
          <p>Termos e condições de uso da plataforma...</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="/js/main.js"></script>
  <script>
    function showModal(id) {
      document.getElementById(`${id}-modal`).classList.remove('hidden');
    }
    function hideModal(id) {
      document.getElementById(`${id}-modal`).classList.add('hidden');
    }
    
    // Menu mobile
    document.getElementById('mobile-menu-button').addEventListener('click', function() {
      const menu = document.getElementById('mobile-menu');
      menu.classList.toggle('hidden');
    });
  </script>
</body>
</html>